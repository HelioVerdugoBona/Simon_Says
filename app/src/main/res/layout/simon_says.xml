<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simonSays"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#e0e0e0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/LblSimonSays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:text="Es el turno de Simon"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:layout_margin="8dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnYellow"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:backgroundTint="#E0E000"
                android:layout_margin="8dp"
                app:cornerRadius="25dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnRed"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:backgroundTint="@color/red"
                android:layout_margin="8dp"
                app:cornerRadius="25dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </GridLayout>
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/btnBlue"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:backgroundTint="@color/blue"
                android:layout_margin="8dp"
                app:cornerRadius="25dp"
                tools:ignore="SpeakableTextPresentCheck" />

            <Button
                android:id="@+id/btnGreen"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:backgroundTint="@color/green"
                android:layout_margin="8dp"
                app:cornerRadius="25dp"
                tools:ignore="SpeakableTextPresentCheck" />
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="80dp">

        <Button
            android:id="@+id/btnEndGame"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="Terminar partida"
            />

        <Button
            android:id="@+id/btnReDoGame"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_margin="8dp"
            android:text="Reiniciar partida"
            />

    </LinearLayout>


</LinearLayout>